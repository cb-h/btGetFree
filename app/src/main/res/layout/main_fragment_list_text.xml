<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:padding="10dp">


    <TextView
        android:id="@+id/main_fragment_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:padding="5dp"
        android:text="titletitletitletitletitletitletitletitletitletitletititletitletitletitletitletititletitletitletitletitletititletitletitletitletitletitletitletitletitletitletitletitletitle"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/main_fragment_list_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_fragment_list_title"
        android:padding="5dp"
        android:text="size"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/main_fragment_list_creattime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_fragment_list_title"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="clicktime"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/main_fragment_list_clicktime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/main_fragment_list_title"
        android:padding="5dp"
        android:text="creattime"
        android:textSize="14sp"/>


</RelativeLayout>